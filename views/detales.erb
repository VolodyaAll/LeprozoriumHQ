<h3>Post detales</h3>
<br />
<p>
	<%= @post.content %>
	<br />
	Added at <%= @post.created_at %>	
</p>
<br />
<h4>Comments</h4>
<br />
<hr />

	<% @comments.each do |comment| %>
		<p>
			<%= comment.content %>
			<br />
			<span style="font-size: 75%; color: #999">Added at <%= comment.created_at %></span>
			<br />		
		</p>

		<hr />
	<% end %>

<form action="/detales/<%= @post.id %>" method="POST" role="form">	 
		<div class="form-group">
		    <textarea name="comment[content]" class="form-control" rows="6" placeholder="Enter your comment here"></textarea>
	  	</div> 
	  	</br>
	  	<button type="submit" class="btn btn-primary">Add comment</button>
	</form>